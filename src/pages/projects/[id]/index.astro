---
import { type CollectionEntry, getCollection } from "astro:content";
import ProjectDetails from "@layouts/ProjectDetails.astro";
import { getSortedProjects } from "@utils/getSortedProjects";
import { getSharedGraph, getAllPosts, getCollections } from "@utils/buildGraph";
import { getBacklinks } from "@utils/getBacklinks";

export interface Props {
  project: CollectionEntry<"projects">;
}

export async function getStaticPaths() {
  const projects = await getCollection("projects");

  const projectResult = projects.map(project => ({
    params: { id: project.id },
    props: { project },
  }));

  return projectResult;
}

const { project } = Astro.props;

const collections = await getCollections();
const sortedProjects = getSortedProjects(collections.projects);
const graph = await getSharedGraph();
const allPosts = await getAllPosts();
const backlinks = getBacklinks(graph, `projects/${project.id}`, allPosts);
---

<ProjectDetails project={project} projects={sortedProjects} backlinks={backlinks} />
