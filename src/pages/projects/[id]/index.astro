---
import { type CollectionEntry, getCollection } from "astro:content";
import ProjectDetails from "@layouts/ProjectDetails.astro";
import { getSortedProjects } from "@utils/getSortedProjects";
import getIncomingLinks from "@utils/getIncomingLinks";

export interface Props {
  project: CollectionEntry<"projects">;
}

export async function getStaticPaths() {
  const projects = await getCollection("projects");

  const projectResult = projects.map(project => ({
    params: { id: project.id },
    props: { project },
  }));

  return projectResult;
}

const { project } = Astro.props;

const projects = await getCollection("projects");
const sortedProjects = getSortedProjects(projects);
const notes = await getCollection("notes");
const writing = await getCollection("writing");
const journal = await getCollection("journal");
const backlinkSources = [...notes, ...writing, ...journal, ...projects];
const incomingLinks = getIncomingLinks(backlinkSources, project.id, "projects");
const backlinks = incomingLinks.map(entry => {
  const entryBasePath = entry.collection === "projects" ? "projects" : entry.collection;
  return {
    title: entry.data.title,
    url: `/${entryBasePath}/${entry.id}/`,
    type: entry.data.type, // exploration, loadout, theme, or undefined
    description: entry.data.description,
  };
});
---

<ProjectDetails project={project} projects={sortedProjects} backlinks={backlinks} />
