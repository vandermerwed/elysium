---
import { SITE } from "@config";
import Posts from "@layouts/Posts.astro";
import type { GetStaticPaths, Page } from "astro";
import type { CollectionEntry } from "astro:content";
import { getSortedPosts } from "@utils/getSortedPosts";
import getPostsWithEnrichedFrontmatter from "@utils/getPostsWithEnrichedFrontmatter";
import { getSharedGraph, getCollections } from "@utils/buildGraph";

export const getStaticPaths = (async ({ paginate }) => {
  const collections = await getCollections();
  const graph = await getSharedGraph();

  const basePosts = collections.journal.filter(({ data }) => data.status && (data.status === "published" || data.status === "release"));
  const posts = await getPostsWithEnrichedFrontmatter<"journal">(basePosts, graph);

  return paginate(getSortedPosts(posts), { pageSize: SITE.postPerPage });
}) satisfies GetStaticPaths;

const { page } = Astro.props;
const typedPage = page as unknown as Page<CollectionEntry<"journal">>;
---

<Posts
  page={typedPage}
  activeNav="journal"
  pageTitle="Journal"
  pageDesc="Personal updates, yearly themes, and tools."
  basePath="journal"
/>
