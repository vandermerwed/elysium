---
import { type CollectionEntry, getCollection } from "astro:content";
import PostDetails from "@layouts/PostDetails.astro";
import { getSortedPosts } from "@utils/getSortedPosts";
import { buildNoteGraph, getIncomingLinkIds } from "@utils/noteGraph";

export interface Props {
  post: CollectionEntry<"journal">;
}

export async function getStaticPaths() {
  const posts = await getCollection("journal", ({ data }) => data.status && data.status === "published" || data.status === "release");

  const postResult = posts.map(post => ({
    params: { id: post.id },
    props: { post },
  }));

  return postResult;
}

const { post } = Astro.props;

const posts = await getCollection("journal");
const sortedPosts = getSortedPosts(posts);
const notePosts = await getCollection("notes");
const writingPosts = await getCollection("writing");
const projectPosts = await getCollection("projects");
const allPosts = [...posts, ...notePosts, ...writingPosts, ...projectPosts];

const graph = buildNoteGraph(allPosts);
const nodeId = `journal/${post.id}`;
const incomingNodeIds = getIncomingLinkIds(graph, nodeId);
const backlinks = incomingNodeIds.map(id => {
  const [collection, ...idParts] = id.split("/");
  const postId = idParts.join("/");
  const source = allPosts.find(p => p.collection === collection && p.id === postId);
  const entryBasePath = collection === "projects" ? "projects" : collection;
  return {
    title: source?.data.title ?? postId,
    url: `/${entryBasePath}/${postId}/`,
    type: source?.data && "type" in source.data ? (source.data as Record<string, unknown>).type as string | undefined : undefined,
    description: source?.data.description ?? "",
  };
});
---

<PostDetails post={post} posts={sortedPosts} basePath="journal" activeNav="journal" backlinks={backlinks} />
