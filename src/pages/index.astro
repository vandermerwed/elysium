---
import { getCollection } from "astro:content";
import Layout from "@layouts/Layout.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import LinkButton from "@components/LinkButton.astro";
import Hr from "@components/Hr.astro";
import Card from "@components/Card";
import { getSortedProjects } from "@utils/getSortedProjects";
import { getSortedPosts } from "@utils/getSortedPosts";
import getPostsWithEnrichedFrontmatter from "@utils/getPostsWithEnrichedFrontmatter";
import { SITE } from "@config";

const baseNotes = await getCollection("notes", ({ data }) => data.status && data.status === "published");
const notes = await getPostsWithEnrichedFrontmatter<"notes">(baseNotes);
const sortedNotes = getSortedPosts(notes);

const baseWriting = await getCollection("writing", ({ data }) => data.status && data.status === "published");
const writing = await getPostsWithEnrichedFrontmatter<"writing">(baseWriting);
const sortedWriting = getSortedPosts(writing);

const baseJournal = await getCollection("journal", ({ data }) => data.status && data.status === "published");
const journal = await getPostsWithEnrichedFrontmatter<"journal">(baseJournal);
const sortedJournal = getSortedPosts(journal);

const projects = getSortedProjects(await getCollection("projects"));

const latestWriting = sortedWriting.slice(0, SITE.postPerIndex);
const latestJournal = sortedJournal.slice(0, SITE.postPerIndex);
const latestNotes = sortedNotes.slice(0, SITE.postPerIndex);
const recentExplorations = getSortedPosts(notes, ["exploration"]).slice(0, 4);
const recentProjects = projects.slice(0, 3);

---

<Layout>
  <Header />
  <main id="main-content">
    <section id="hero">
      <h1 class="mr-2"><span class="text-skin-accent">Daniel</span><br />van der Merwe</h1>
      <h2>Builder and systems thinker.</h2>
      <p>
        By day, I’m Technical Director at <a class="external-link" href="https://rokkit200.co" target="_blank" rel="noopener noreferrer">Rokkit200</a>. Outside of work, I explore ideas, build tools for myself, and document what I’m learning.
      </p>
      <p>
        This is my personal digital space for side projects, experiments, and thinking. It’s not a portfolio, it’s where I tinker, iterate, and share the parts that might be useful to others.
      </p>
    </section>

    {
      latestWriting.length > 0 && (
        <>
          <section class="featured" id="latest-writing">
            <h2>Latest Writing</h2>
            <p class="section-desc">Long-form essays and polished thinking.</p>
            <ul>
              {latestWriting.map(({ data, id }) => (
                <Card
                  href={`/writing/${id}/`}
                  frontmatter={data}
                  secHeading={false}
                  showNexusScore={false}
                />
              ))}
            </ul>
          </section>
          <div class="all-posts-btn-wrapper">
            <LinkButton href="/writing/">
              All Writing
              <svg xmlns="http://www.w3.org/2000/svg"
                ><path
                  d="m11.293 17.293 1.414 1.414L19.414 12l-6.707-6.707-1.414 1.414L15.586 11H6v2h9.586z"
                ></path>
              </svg>
            </LinkButton>
          </div>
          <Hr />
        </>
      )
    }

    {
      latestJournal.length > 0 && (
        <>
          <section class="featured" id="latest-journal">
            <h2>Journal</h2>
            <p class="section-desc">Personal updates, yearly themes, and tools.</p>
            <ul>
              {latestJournal.map(({ data, id }) => (
                <Card
                  href={`/journal/${id}/`}
                  frontmatter={data}
                  secHeading={false}
                  showNexusScore={false}
                />
              ))}
            </ul>
          </section>
          <div class="all-posts-btn-wrapper">
            <LinkButton href="/journal/">
              All Journal
              <svg xmlns="http://www.w3.org/2000/svg"
                ><path
                  d="m11.293 17.293 1.414 1.414L19.414 12l-6.707-6.707-1.414 1.414L15.586 11H6v2h9.586z"
                ></path>
              </svg>
            </LinkButton>
          </div>
          <Hr />
        </>
      )
    }

    {
      latestNotes.length > 0 && (
        <>
          <section class="featured" id="latest-notes">
            <h2>Latest Notes</h2>
            <p class="section-desc">In-progress thoughts from the digital garden.</p>
            <ul>
              {latestNotes.map(({ data, id }) => {
                const resolvedType = data.type ?? "note";
                return (
                <Card
                  href={`/notes/${id}/`}
                  frontmatter={{ ...data, type: resolvedType }}
                  secHeading={false}
                  showNexusScore={true}
                  contentType={resolvedType}
                />
              );
              })}
            </ul>
          </section>
          <div class="all-posts-btn-wrapper">
            <LinkButton href="/notes/">
              All Notes
              <svg xmlns="http://www.w3.org/2000/svg"
                ><path
                  d="m11.293 17.293 1.414 1.414L19.414 12l-6.707-6.707-1.414 1.414L15.586 11H6v2h9.586z"
                ></path>
              </svg>
            </LinkButton>
          </div>
          <Hr />
        </>
      )
    }

    {
      recentExplorations.length > 0 && (
        <>
          <section class="featured" id="recent-explorations">
            <h2>Recent Explorations</h2>
            <p class="section-desc">Notes with embedded prototypes and experiments.</p>
            <ul>
              {recentExplorations.map(({ data, id }) => (
                <Card
                  href={`/notes/${id}/`}
                  frontmatter={{ ...data, type: "exploration" }}
                  secHeading={false}
                  showNexusScore={true}
                  contentType="exploration"
                />
              ))}
            </ul>
          </section>
          <div class="all-posts-btn-wrapper">
            <LinkButton href="/notes/?type=exploration">
              All Explorations
              <svg xmlns="http://www.w3.org/2000/svg"
                ><path
                  d="m11.293 17.293 1.414 1.414L19.414 12l-6.707-6.707-1.414 1.414L15.586 11H6v2h9.586z"
                ></path>
              </svg>
            </LinkButton>
          </div>
          <Hr />
        </>
      )
    }

    {
      recentProjects.length > 0 && (
        <section class="featured" id="recent-projects">
          <h2>Projects</h2>
          <p class="section-desc">Active, stable, and archived work.</p>
          <ul>
            {recentProjects.map(({ data, id }) => (
              <Card
                href={`/projects/${id}/`}
                frontmatter={{ ...data, type: "project" }}
                secHeading={false}
                showNexusScore={false}
                contentType="project"
              />
            ))}
          </ul>
          <div class="all-posts-btn-wrapper">
            <LinkButton href="/projects/">
              All Projects
              <svg xmlns="http://www.w3.org/2000/svg"
                ><path
                  d="m11.293 17.293 1.414 1.414L19.414 12l-6.707-6.707-1.414 1.414L15.586 11H6v2h9.586z"
                ></path>
              </svg>
            </LinkButton>
          </div>
        </section>
      )
    }
  </main>

  <Footer />
</Layout>

<style>
  /* ===== Hero Section ===== */
  #hero {
    @apply pb-6 pt-8;
  }
  #hero h1 {
    @apply my-4 inline-block text-3xl font-bold sm:my-8 sm:text-6xl;
  }
  #hero h2 {
    @apply my-4 inline-block text-xl sm:my-4 sm:text-2xl;
  }
  #hero .rss-link {
    @apply mb-6;
  }
  #hero .rss-icon {
    @apply mb-2 h-6 w-6 scale-110 fill-skin-accent sm:mb-3 sm:scale-125;
  }
  #hero p {
    @apply my-2;
  }
  .social-wrapper {
    @apply mt-4 flex flex-col sm:flex-row sm:items-center;
  }
  .social-links {
    @apply mb-1 mr-2 whitespace-nowrap sm:mb-0;
  }

  /* ===== Featured & Recent Posts Sections ===== */
  .featured {
    @apply pb-6 pt-12;
  }
  .featured h2 {
    @apply text-3xl font-semibold tracking-wide;
  }
  .section-desc {
    @apply mt-2 text-sm text-skin-base/80;
  }
  .all-posts-btn-wrapper {
    @apply my-8 text-center;
  }

  /* ===== Fragment Posts Grid ===== */
  .fragment-grid {
    @apply grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-2;
  }
</style>
