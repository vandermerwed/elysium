---
import { type CollectionEntry, getCollection } from "astro:content";
import PostDetails from "@layouts/PostDetails.astro";
import { getSortedPosts } from "@utils/getSortedPosts";
import getIncomingLinks from "@utils/getIncomingLinks";

export interface Props {
  post: CollectionEntry<"writing">;
}

export async function getStaticPaths() {
  const posts = await getCollection("writing", ({ data }) => data.status && data.status === "published" || data.status === "release");

  const postResult = posts.map(post => ({
    params: { id: post.id },
    props: { post },
  }));

  return postResult;
}

const { post } = Astro.props;

const posts = await getCollection("writing");
const sortedPosts = getSortedPosts(posts);
const notePosts = await getCollection("notes");
const journalPosts = await getCollection("journal");
const projectPosts = await getCollection("projects");
const backlinkSources = [...posts, ...notePosts, ...journalPosts, ...projectPosts];
const incomingLinks = getIncomingLinks(backlinkSources, post.id, "writing");
const backlinks = incomingLinks.map(entry => {
  const entryBasePath = entry.collection === "projects" ? "projects" : entry.collection;
  return {
    title: entry.data.title,
    url: `/${entryBasePath}/${entry.id}/`,
    type: entry.data.type, // exploration, loadout, theme, or undefined
    description: entry.data.description,
  };
});
---

<PostDetails post={post} posts={sortedPosts} basePath="writing" activeNav="writing" backlinks={backlinks} />
