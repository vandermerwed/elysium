---
import { type CollectionEntry, getCollection } from "astro:content";
import PostDetails from "@layouts/PostDetails.astro";
import { getSortedPosts } from "@utils/getSortedPosts";
import { getSharedGraph, getAllPosts, getCollections } from "@utils/buildGraph";
import { getBacklinks } from "@utils/getBacklinks";

export interface Props {
  post: CollectionEntry<"writing">;
}

export async function getStaticPaths() {
  const posts = await getCollection("writing", ({ data }) => data.status && data.status === "published" || data.status === "release");

  const postResult = posts.map(post => ({
    params: { id: post.id },
    props: { post },
  }));

  return postResult;
}

const { post } = Astro.props;

const collections = await getCollections();
const sortedPosts = getSortedPosts(collections.writing);
const graph = await getSharedGraph();
const allPosts = await getAllPosts();
const backlinks = getBacklinks(graph, `writing/${post.id}`, allPosts);
---

<PostDetails post={post} posts={sortedPosts} basePath="writing" activeNav="writing" backlinks={backlinks} />
