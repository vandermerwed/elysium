---
export interface Props {
  tag: string;
  size?: "sm" | "lg";
}

const { tag, size = "sm" } = Astro.props;
---

<li class:list={["tag-item", size === "lg" && "tag-lg"]}>
  <a href={`/tags/${tag}/`} transition:name={`tag-${tag}`} class="tag-link">
    <span class="tag-hash" aria-hidden="true">#</span>{tag}
  </a>
</li>

<style>
  .tag-item {
    @apply inline-block;
  }
  .tag-lg {
    @apply my-1;
  }
  .tag-link {
    @apply pr-2 font-mono text-sm;
    color: rgb(var(--color-base));
    text-decoration: none;
    transition: color var(--transition-base);
  }
  .tag-link:hover {
    color: rgb(var(--color-accent));
    text-decoration: none;
  }
  .tag-hash {
    color: rgb(var(--color-accent));
    margin-right: 1px;
  }
  .tag-lg .tag-link {
    @apply text-base;
  }
</style>
