---
import type { Page } from "astro";

export interface Props {
  page: Page<any>;
}

const { page } = Astro.props;
---

{
  page.lastPage > 1 && (
    <nav class="pagination-wrapper" aria-label="Pagination">
      {page.url.prev ? (
        <a href={page.url.prev} class="pagination-link">
          &larr; Previous
        </a>
      ) : (
        <span class="pagination-link disabled">&larr; Previous</span>
      )}

      <span class="pagination-current">
        Page {page.currentPage} of {page.lastPage}
      </span>

      {page.url.next ? (
        <a href={page.url.next} class="pagination-link">
          Next &rarr;
        </a>
      ) : (
        <span class="pagination-link disabled">Next &rarr;</span>
      )}
    </nav>
  )
}

<style>
  .pagination-wrapper {
    @apply mb-8 mt-auto flex items-center justify-center gap-8 font-mono text-sm;
  }
  .pagination-link {
    @apply select-none;
    color: rgb(var(--color-base));
    text-decoration: none;
    transition: color var(--transition-base);
  }
  .pagination-link:hover:not(.disabled) {
    color: rgb(var(--color-accent));
  }
  .pagination-link.disabled {
    @apply pointer-events-none;
    opacity: 0.3;
  }
  .pagination-current {
    @apply text-xs;
    color: rgb(var(--color-base));
  }
</style>
