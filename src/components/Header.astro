---
import { SITE } from "@config";

export interface Props {
  activeNav?: "writing" | "projects" | "about" | "search" | "notes" | "journal" | "tags" | "archives";
}

const { activeNav } = Astro.props;
const currentPath = Astro.url.pathname;
const isActive = (path: string, navKey?: Props["activeNav"]) =>
  (navKey && activeNav === navKey) || currentPath.startsWith(path);
---

<header>
  <a id="skip-to-content" href="#main-content">Skip to content</a>
  <div class="nav-container">
    <div class="top-nav-wrap">
      <a href="/" class="logo" aria-label="Home">
        <span class="logo-diamond" aria-hidden="true">&#9670;</span>
        <!-- <span class="logo-text">elysium</span> -->
      </a>
      <nav id="nav-menu">
        <button
          class="hamburger-menu focus-outline"
          aria-label="Open Menu"
          aria-expanded="false"
          aria-controls="menu-items"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="1.5"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="menu-icon"
          >
            <line x1="7" y1="12" x2="21" y2="12" class="line"></line>
            <line x1="3" y1="6" x2="21" y2="6" class="line"></line>
            <line x1="12" y1="18" x2="21" y2="18" class="line"></line>
            <line x1="18" y1="6" x2="6" y2="18" class="close"></line>
            <line x1="6" y1="6" x2="18" y2="18" class="close"></line>
          </svg>
        </button>
        <ul id="menu-items" class="display-none sm:flex">
          <li>
            <a href="/notes/" class={isActive("/notes", "notes") ? "active" : ""}>
              /notes
            </a>
          </li>
          <li>
            <a href="/writing/" class={isActive("/writing", "writing") ? "active" : ""}>
              /writing
            </a>
          </li>
          <li>
            <a href="/journal/" class={isActive("/journal", "journal") ? "active" : ""}>
              /journal
            </a>
          </li>
          <li>
            <a href="/projects/" class={isActive("/projects", "projects") ? "active" : ""}>
              /projects
            </a>
          </li>
          <li>
            <a href="/about/" class={isActive("/about", "about") ? "active" : ""}>
              /about
            </a>
          </li>
          <li class="nav-icon-item">
            <a
              href="/search/"
              class={`focus-outline nav-icon-link ${isActive("/search", "search") ? "active" : ""}`}
              aria-label="Search"
              title="Search"
            >
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                <path
                  d="M19.023 16.977a35.13 35.13 0 0 1-1.367-1.384c-.372-.378-.596-.653-.596-.653l-2.8-1.337A6.962 6.962 0 0 0 16 9c0-3.859-3.14-7-7-7S2 5.141 2 9s3.14 7 7 7c1.763 0 3.37-.66 4.603-1.739l1.337 2.8s.275.224.653.596c.387.363.896.854 1.384 1.367l1.358 1.392.604.646 2.121-2.121-.646-.604c-.379-.372-.885-.866-1.391-1.36zM9 14c-2.757 0-5-2.243-5-5s2.243-5 5-5 5 2.243 5 5-2.243 5-5 5z"
                ></path>
              </svg>
              <span class="sr-only">Search</span>
            </a>
          </li>
          {
            SITE.lightAndDarkMode && (
              <li class="nav-icon-item">
                <button
                  id="theme-btn"
                  class="focus-outline"
                  title="Toggles light & dark"
                  aria-label="auto"
                  aria-live="polite"
                >
                  <svg xmlns="http://www.w3.org/2000/svg" id="moon-svg">
                    <path d="M20.742 13.045a8.088 8.088 0 0 1-2.077.271c-2.135 0-4.14-.83-5.646-2.336a8.025 8.025 0 0 1-2.064-7.723A1 1 0 0 0 9.73 2.034a10.014 10.014 0 0 0-4.489 2.582c-3.898 3.898-3.898 10.243 0 14.143a9.937 9.937 0 0 0 7.072 2.93 9.93 9.93 0 0 0 7.07-2.929 10.007 10.007 0 0 0 2.583-4.491 1.001 1.001 0 0 0-1.224-1.224zm-2.772 4.301a7.947 7.947 0 0 1-5.656 2.343 7.953 7.953 0 0 1-5.658-2.344c-3.118-3.119-3.118-8.195 0-11.314a7.923 7.923 0 0 1 2.06-1.483 10.027 10.027 0 0 0 2.89 7.848 9.972 9.972 0 0 0 7.848 2.891 8.036 8.036 0 0 1-1.484 2.059z" />
                  </svg>
                  <svg xmlns="http://www.w3.org/2000/svg" id="sun-svg">
                    <path d="M6.993 12c0 2.761 2.246 5.007 5.007 5.007s5.007-2.246 5.007-5.007S14.761 6.993 12 6.993 6.993 9.239 6.993 12zM12 8.993c1.658 0 3.007 1.349 3.007 3.007S13.658 15.007 12 15.007 8.993 13.658 8.993 12 10.342 8.993 12 8.993zM10.998 19h2v3h-2zm0-17h2v3h-2zm-9 9h3v2h-3zm17 0h3v2h-3zM4.219 18.363l2.12-2.122 1.415 1.414-2.12 2.122zM16.24 6.344l2.122-2.122 1.414 1.414-2.122 2.122zM6.342 7.759 4.22 5.637l1.415-1.414 2.12 2.122zm13.434 10.605-1.414 1.414-2.122-2.122 1.414-1.414z" />
                  </svg>
                </button>
              </li>
            )
          }
        </ul>
      </nav>
    </div>
  </div>
  <div class="header-rule">
    <hr aria-hidden="true" />
  </div>
</header>

<style>
  #skip-to-content {
    @apply absolute -top-full left-16 z-50 bg-skin-accent px-3 py-2 text-skin-inverted transition-all focus:top-4;
  }
  .nav-container {
    @apply mx-auto flex max-w-3xl flex-col items-center justify-between sm:flex-row;
  }
  .top-nav-wrap {
    @apply relative flex w-full items-center justify-between px-4 py-4 sm:py-6;
    min-height: 64px;
  }
  .logo {
    @apply flex items-center gap-2 font-mono text-lg font-medium no-underline;
    color: rgb(var(--color-text-base));
  }
  .logo:hover {
    text-decoration: none;
  }
  .logo-diamond {
    @apply text-skin-accent text-xl;
  }
  .logo-text {
    @apply lowercase;
  }
  .hamburger-menu {
    @apply self-center p-2 sm:hidden;
  }
  .hamburger-menu svg {
    @apply h-6 w-6 scale-125 fill-skin-base;
  }

  nav {
    @apply flex w-full flex-col items-center sm:ml-2 sm:flex-row sm:justify-end sm:space-x-4 sm:py-0;
  }
  nav ul {
    @apply mt-4 grid w-44 grid-cols-2 grid-rows-6 gap-x-2 gap-y-2 sm:ml-0 sm:mt-0 sm:flex sm:w-auto sm:items-center sm:gap-1;
  }
  nav ul li {
    @apply col-span-2 flex items-center justify-center;
  }
  nav ul li a {
    @apply w-full px-4 py-3 text-center font-mono text-sm sm:my-0 sm:px-2 sm:py-1;
    color: rgb(var(--color-base));
    text-decoration: none;
    transition: color var(--transition-base);
  }
  nav ul li a:hover {
    color: rgb(var(--color-text-base));
    text-decoration: none;
  }
  nav a.active {
    color: rgb(var(--color-text-base));
    font-weight: 500;
  }

  /* Icon items (search, theme) */
  .nav-icon-item {
    @apply col-span-1;
  }
  .nav-icon-link {
    @apply flex items-center justify-center p-3 sm:p-1;
  }
  .nav-icon-link svg {
    @apply h-5 w-5 scale-125 sm:scale-100;
    fill: rgb(var(--color-base));
  }
  .nav-icon-link:hover svg,
  .nav-icon-link.active svg {
    fill: rgb(var(--color-accent));
  }

  nav button {
    @apply p-1;
  }
  nav button svg {
    @apply h-6 w-6;
    fill: rgb(var(--color-base));
  }
  nav button:hover svg {
    fill: rgb(var(--color-accent));
  }
  #theme-btn {
    @apply p-3 sm:p-1;
  }
  #theme-btn svg {
    @apply scale-125 sm:scale-100;
  }

  .menu-icon line {
    @apply transition-opacity duration-75 ease-in-out;
  }
  .menu-icon .close {
    opacity: 0;
  }
  .menu-icon.is-active .line {
    @apply opacity-0;
  }
  .menu-icon.is-active .close {
    @apply opacity-100;
  }

  .header-rule {
    @apply mx-auto max-w-3xl px-4;
  }
  .header-rule hr {
    border-color: rgb(var(--color-border));
    border-top-width: 1px;
  }
</style>

<script>
  function toggleNav() {
    // Toggle menu
    const menuBtn = document.querySelector(".hamburger-menu");
    const menuIcon = document.querySelector(".menu-icon");
    const menuItems = document.querySelector("#menu-items");

    menuBtn?.addEventListener("click", () => {
      const menuExpanded = menuBtn.getAttribute("aria-expanded") === "true";
      menuIcon?.classList.toggle("is-active");
      menuBtn.setAttribute("aria-expanded", menuExpanded ? "false" : "true");
      menuBtn.setAttribute(
        "aria-label",
        menuExpanded ? "Open Menu" : "Close Menu"
      );
      menuItems?.classList.toggle("display-none");
    });
  }

  toggleNav();

  // Runs on view transitions navigation
  document.addEventListener("astro:after-swap", toggleNav);
</script>
