---
export interface Props {
  href: string;
  className?: string;
  ariaLabel?: string;
  title?: string;
  disabled?: boolean;
}

const {
  href,
  className = "",
  ariaLabel,
  title,
  disabled = false,
} = Astro.props;
---

{
  disabled ? (
    <span
      class:list={["link-btn link-btn--disabled", className]}
      title={title}
      aria-disabled={disabled}
    >
      <slot />
    </span>
  ) : (
    <a
      {href}
      class:list={["link-btn", className]}
      aria-label={ariaLabel}
      title={title}
    >
      <slot />
    </a>
  )
}

<style>
  .link-btn {
    @apply inline-block font-mono text-sm;
    color: rgb(var(--color-base));
    border: 1px solid rgb(var(--color-border-muted));
    padding: 0.375rem 0.75rem;
    text-decoration: none;
    transition: border-color var(--transition-base), color var(--transition-base);
  }
  .link-btn:hover {
    color: rgb(var(--color-accent));
    border-color: rgb(var(--color-accent));
  }
  .link-btn--disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }
</style>
