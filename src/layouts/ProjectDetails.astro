---
import Layout from "@layouts/Layout.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import Tag from "@components/Tag.astro";
import type { CollectionEntry } from "astro:content";
import Backlinks from "@components/Backlinks.astro";
import { SITE } from "@config";
import { render } from "astro:content";
import { formatDate, formatProjectAge } from "@utils/marginalia";

export interface Props {
  project: CollectionEntry<"projects">;
  projects: CollectionEntry<"projects">[];
  backlinks?: Array<{
    title: string;
    url: string;
    type?: string;
    description?: string;
  }>;
}

const { project, projects, backlinks = [] } = Astro.props;

const {
  title,
  author,
  description,
  ogImage,
  canonicalURL,
  startDate,
  endDate,
  tags,
  status,
  techStack,
  category,
  links,
} = project.data;

const { Content, remarkPluginFrontmatter } = await render(project);

const ogImageUrl = typeof ogImage === "string" ? ogImage : ogImage?.src;
const ogUrl = new URL(
  ogImageUrl ?? `/projects/${project.id}.png`,
  Astro.url.origin
).href;

const layoutProps = {
  title: `${title} | ${SITE.title}`,
  author,
  description,
  canonicalURL,
  ogImage: ogUrl,
  scrollSmooth: true,
};

const statusIndicator = status === "active" ? ">>> ACTIVE" : status === "stable" ? "--- STABLE" : "... ARCHIVED";

const allProjects = projects.map(({ data: { title }, id }) => ({ id, title }));
const currentProjectIndex = allProjects.findIndex(item => item.id === project.id);
const prevProject = currentProjectIndex > 0 ? allProjects[currentProjectIndex - 1] : null;
const nextProject = currentProjectIndex < allProjects.length - 1 ? allProjects[currentProjectIndex + 1] : null;

const relatedExplorations = backlinks.filter(link => link.type === "exploration");
const otherBacklinks = backlinks.filter(link => link.type !== "exploration");

const articleClasses = ["prose", "mx-auto", "mt-8", "max-w-3xl"];
if (remarkPluginFrontmatter.marginNotes) {
  articleClasses.push("has-margin-notes");
}
---

<Layout {...layoutProps}>
  <Header activeNav="projects" />

  <div class="mx-auto flex w-full max-w-3xl justify-start px-4">
    <a href="/projects/" class="back-link">
      &larr; projects
    </a>
  </div>
  <main id="main-content">
    <h1 transition:name={project.id} class="post-title">{title}</h1>
    <span class="title-rule" aria-hidden="true"></span>

    <div class="project-meta">
      <span class="project-status">{statusIndicator}</span>
      {category && category.map(value => (
        <span class="meta-sep">&middot;&middot;&middot;</span>
        <span>{value}</span>
      ))}
      {startDate && (
        <>
          <span class="meta-sep">&middot;&middot;&middot;</span>
          <span>Started {formatDate(startDate)}</span>
        </>
      )}
      {status === "archived" && endDate && (
        <>
          <span class="meta-sep">&middot;&middot;&middot;</span>
          <span>Ended {formatDate(endDate)}</span>
        </>
      )}
    </div>

    {techStack && techStack.length > 0 && (
      <div class="tech-row">
        <span class="tech-list">{techStack.join(" \u00b7 ")}</span>
        <span class="tech-dots" aria-hidden="true"></span>
        {startDate && <span class="tech-age">{formatProjectAge(startDate)}</span>}
      </div>
    )}

    <ul class="tags-container">
      {tags.map((tag: string) => <Tag tag={tag} />)}
    </ul>

    <article id="article" class={articleClasses.join(" ")}>
      <Content />
    </article>

    {links && (
      <div class="project-links">
        {links.demo && <a href={links.demo} target="_blank" rel="noreferrer">Demo</a>}
        {links.github && <a href={links.github} target="_blank" rel="noreferrer">Source</a>}
        {links.website && <a href={links.website} target="_blank" rel="noreferrer">Website</a>}
        {links.spotify && <a href={links.spotify} target="_blank" rel="noreferrer">Spotify</a>}
      </div>
    )}

    <div class="post-actions">
      <button
        id="back-to-top"
        class="focus-outline back-to-top"
      >
        &uarr; Back to Top
      </button>
    </div>

    <hr class="detail-rule" />

    <div class="prev-next">
      {prevProject && (
        <a href={`/projects/${prevProject.id}/`} class="prev-link">
          <span class="pn-direction">&larr; Previous</span>
          <span class="pn-title">{prevProject.title}</span>
        </a>
      )}
      {nextProject && (
        <a href={`/projects/${nextProject.id}/`} class="next-link">
          <span class="pn-direction">Next &rarr;</span>
          <span class="pn-title">{nextProject.title}</span>
        </a>
      )}
    </div>

    {relatedExplorations.length > 0 && (
      <>
        <hr class="detail-rule" />
        <Backlinks backlinks={relatedExplorations} title="Related Explorations" />
      </>
    )}

    {otherBacklinks.length > 0 && (
      <>
        <hr class="detail-rule" />
        <Backlinks backlinks={otherBacklinks} title="Referenced By" />
      </>
    )}
  </main>
  <Footer />
</Layout>

<style>
  main {
    @apply mx-auto w-full max-w-3xl px-4 pb-12;
  }
  .back-link {
    @apply mb-2 mt-8 font-mono text-sm;
    color: rgb(var(--color-base));
    text-decoration: none;
  }
  .back-link:hover {
    color: rgb(var(--color-accent));
  }
  .post-title {
    @apply mt-2 font-mono text-3xl font-normal;
    color: rgb(var(--color-text-base));
  }
  .title-rule {
    @apply my-3 block;
    width: 100%;
    border-bottom: 2px double rgb(var(--color-border));
  }
  .project-meta {
    @apply flex flex-wrap items-baseline gap-x-2 gap-y-1 font-mono text-xs;
    color: rgb(var(--color-base));
  }
  .project-status {
    @apply uppercase;
    color: rgb(var(--color-accent-secondary));
  }
  .meta-sep {
    color: rgb(var(--color-border-muted));
  }
  .tech-row {
    @apply my-2 flex items-baseline gap-2 font-mono text-xs;
    color: rgb(var(--color-base));
  }
  .tech-list {
    @apply whitespace-nowrap;
  }
  .tech-dots {
    @apply flex-1;
    border-bottom: 1px dotted rgb(var(--color-border-muted));
    position: relative;
    top: -3px;
  }
  .tech-age {
    @apply whitespace-nowrap;
  }
  .tags-container {
    @apply my-3 flex flex-wrap gap-1;
    list-style: none;
    padding: 0;
  }
  .project-links {
    @apply mt-6 flex flex-wrap gap-4 font-mono text-sm;
  }
  .project-links a {
    color: rgb(var(--color-text-base));
    text-decoration: underline;
    text-decoration-style: dotted;
    text-underline-offset: 4px;
  }
  .project-links a:hover {
    color: rgb(var(--color-accent));
  }
  .post-actions {
    @apply mt-6 flex justify-end;
  }
  .back-to-top {
    @apply whitespace-nowrap font-mono text-sm;
    color: rgb(var(--color-base));
    background: none;
    border: none;
    cursor: pointer;
  }
  .back-to-top:hover {
    color: rgb(var(--color-accent));
  }
  .detail-rule {
    @apply my-6;
    border: none;
    border-top: 1px solid rgb(var(--color-border));
  }
  .prev-next {
    @apply grid grid-cols-1 gap-4 sm:grid-cols-2;
  }
  .prev-link,
  .next-link {
    @apply flex flex-col gap-1 font-mono text-sm;
    text-decoration: none;
  }
  .next-link {
    @apply text-right sm:col-start-2;
  }
  .pn-direction {
    @apply text-xs;
    color: rgb(var(--color-base));
  }
  .pn-title {
    color: rgb(var(--color-text-base));
  }
  .prev-link:hover .pn-title,
  .next-link:hover .pn-title {
    color: rgb(var(--color-accent));
  }
</style>

<script is:inline data-astro-rerun>
  /** Create a progress indicator
   *  at the top */
  function createProgressBar() {
    // Create the main container div
    const progressContainer = document.createElement("div");
    progressContainer.className =
      "progress-container fixed top-0 z-10 h-1 w-full bg-skin-fill";

    // Create the progress bar div
    const progressBar = document.createElement("div");
    progressBar.className = "progress-bar h-1 w-0 bg-skin-accent";
    progressBar.id = "myBar";

    // Append the progress bar to the progress container
    progressContainer.appendChild(progressBar);

    // Append the progress container to the document body or any other desired parent element
    document.body.appendChild(progressContainer);
  }
  createProgressBar();

  /** Update the progress bar
   *  when user scrolls */
  function updateScrollProgress() {
    document.addEventListener("scroll", () => {
      const winScroll =
        document.body.scrollTop || document.documentElement.scrollTop;
      const height =
        document.documentElement.scrollHeight -
        document.documentElement.clientHeight;
      const scrolled = (winScroll / height) * 100;
      if (document) {
        const myBar = document.getElementById("myBar");
        if (myBar) {
          myBar.style.width = scrolled + "%";
        }
      }
    });
  }
  updateScrollProgress();

  /** Attaches links to headings in the document,
   *  allowing sharing of sections easily */
  function addHeadingLinks() {
    const headings = Array.from(
      document.querySelectorAll("h2, h3, h4, h5, h6")
    );
    for (const heading of headings) {
      heading.classList.add("group");
      const link = document.createElement("a");
      link.className =
        "heading-link ml-2 opacity-0 group-hover:opacity-100 focus:opacity-100";
      link.href = "#" + heading.id;

      const span = document.createElement("span");
      span.ariaHidden = "true";
      span.innerText = "#";
      link.appendChild(span);
      heading.appendChild(link);
    }
  }
  addHeadingLinks();

  /** Attaches copy buttons to code blocks in the document,
   * allowing users to copy code easily. */
  function attachCopyButtons() {
    const copyButtonLabel = "Copy";
    const codeBlocks = Array.from(document.querySelectorAll("pre"));

    for (const codeBlock of codeBlocks) {
      const wrapper = document.createElement("div");
      wrapper.style.position = "relative";

      const copyButton = document.createElement("button");
      copyButton.className =
        "copy-code absolute right-3 -top-3 rounded bg-skin-card px-2 py-1 text-xs leading-4 text-skin-base font-medium";
      copyButton.innerHTML = copyButtonLabel;
      codeBlock.setAttribute("tabindex", "0");
      codeBlock.appendChild(copyButton);

      // wrap codebock with relative parent element
      codeBlock?.parentNode?.insertBefore(wrapper, codeBlock);
      wrapper.appendChild(codeBlock);

      copyButton.addEventListener("click", async () => {
        await copyCode(codeBlock, copyButton);
      });
    }

    async function copyCode(block, button) {
      const code = block.querySelector("code");
      const text = code?.innerText;

      await navigator.clipboard.writeText(text ?? "");

      // visual feedback that task is completed
      button.innerText = "Copied";

      setTimeout(() => {
        button.innerText = copyButtonLabel;
      }, 700);
    }
  }
  attachCopyButtons();

  /** Scrolls the document to the top when
   * the "Back to Top" button is clicked. */
  function backToTop() {
    document.querySelector("#back-to-top")?.addEventListener("click", () => {
      document.body.scrollTop = 0; // For Safari
      document.documentElement.scrollTop = 0; // For Chrome, Firefox, IE and Opera
    });
  }
  backToTop();

  /* Go to page start after page swap */
  document.addEventListener("astro:after-swap", () =>
    window.scrollTo({ left: 0, top: 0, behavior: "instant" })
  );
</script>
