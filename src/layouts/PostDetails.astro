---
import Layout from "@layouts/Layout.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import Tag from "@components/Tag.astro";
import NexusPanel from "@components/NexusPanel.astro";

import { SITE } from "@config";
import AidaNotice from "@components/AidaNotice.astro";
import EmbedPrototype from "@components/EmbedPrototype.astro";
import Backlinks from "@components/Backlinks.astro";
import { formatDate, formatWordCount, formatReadingTime } from "@utils/marginalia";
import { type CollectionEntry, render } from "astro:content";

export interface Props {
  post: CollectionEntry<"notes" | "writing" | "journal">;
  posts: CollectionEntry<"notes" | "writing" | "journal" | "projects">[];
  basePath?: string;
  activeNav?: "writing" | "projects" | "about" | "search" | "notes" | "journal";
  backlinks?: Array<{
    title: string;
    url: string;
    type?: string;
    description?: string;
  }>;
}

const { post, posts, basePath = "notes", activeNav, backlinks = [] } = Astro.props;

const {
  title,
  author,
  description,
  ogImage,
  canonicalURL,
  pubDatetime,
  modDatetime,
  tags,
  editPost,
  inspiration,
  prototypeUrl,
  prototypeType,
  aiUsage,
} = post.data;
const type = "type" in post.data ? (post.data as Record<string, unknown>).type as string | undefined : undefined;

const { Content, remarkPluginFrontmatter } = await render(post);

const ogImageUrl = typeof ogImage === "string" ? ogImage : ogImage?.src;
const ogUrl = new URL(ogImageUrl ?? `/${basePath}/${post.id}.png`, Astro.url.origin)
  .href;

const resolvedType = basePath === "writing"
  ? undefined
  : type ?? (basePath === "journal" ? "journal" : "note");
const resolvedTypeLabel = resolvedType
  ? resolvedType.charAt(0).toUpperCase() + resolvedType.slice(1)
  : undefined;

const layoutProps = {
  title: `${title} | ${SITE.title}`,
  author,
  description,
  pubDatetime,
  modDatetime,
  canonicalURL,
  ogImage: ogUrl,
  scrollSmooth: true,
};

/* ========== Prev/Next Posts ========== */

const allPosts = posts.map(({ data: { title }, id }) => ({
  id,
  title,
}));

const currentPostIndex = allPosts.findIndex(a => a.id === post.id);

const prevPost = currentPostIndex !== 0 ? allPosts[currentPostIndex - 1] : null;
const nextPost =
  currentPostIndex !== allPosts.length ? allPosts[currentPostIndex + 1] : null;

const articleClasses = ["prose", "mx-auto", "mt-8", "max-w-3xl"];
if (remarkPluginFrontmatter.marginNotes) {
  articleClasses.push("has-margin-notes");
}

/* ========== Metadata ========== */
const wordCount = remarkPluginFrontmatter.wordCount ?? post.data.wordCount ?? 0;
const readingTime = remarkPluginFrontmatter.readingTime ?? post.data.readingTime ?? "";
const nexusScore = remarkPluginFrontmatter.nexusScore ?? post.data.nexusScore ?? "";
const incomingLinks = Array.isArray(post.data.incomingLinks) ? post.data.incomingLinks : [];
const outgoingLinks = Array.isArray(post.data.outgoingLinks) ? post.data.outgoingLinks : [];
const externalLinks = Array.isArray(post.data.externalLinks) ? post.data.externalLinks : [];
const closeness = (post.data as Record<string, any>).closeness ?? 0;
const hubScore = (post.data as Record<string, any>).hubScore ?? 0;
const authorityScore = (post.data as Record<string, any>).authorityScore ?? 0;
const eccentricity = (post.data as Record<string, any>).eccentricity ?? 0;
const betweennessValue = (post.data as Record<string, any>).betweennessValue ?? 0;
const pageRankValue = (post.data as Record<string, any>).pageRankValue ?? 0;
const reachability = (post.data as Record<string, any>).reachability ?? 0;
const reciprocity = (post.data as Record<string, any>).reciprocity ?? 0;
const communityId = (post.data as Record<string, any>).communityId ?? -1;
const communitySize = (post.data as Record<string, any>).communitySize ?? 0;
const clusterLabel = (post.data as Record<string, any>).clusterLabel ?? "";
const diameter = (post.data as Record<string, any>).diameter ?? 0;
---

<Layout {...layoutProps}>
  <Header activeNav={activeNav} />

  <div class="mx-auto flex w-full max-w-3xl justify-start px-4">
    <a href={`/${basePath}/`} class="back-link">
      &larr; {basePath}
    </a>
  </div>
  <main id="main-content">
    <div class="post-header">
      <h1 transition:name={post.id} class="post-title">{title}</h1>

      {basePath === "notes" && nexusScore ? (
        <NexusPanel
          nexusScore={nexusScore}
          incomingCount={incomingLinks.length}
          outgoingCount={outgoingLinks.length}
          externalCount={externalLinks.length}
          closeness={closeness}
          hubScore={hubScore}
          authorityScore={authorityScore}
          eccentricity={eccentricity}
          betweennessValue={betweennessValue}
          pageRankValue={pageRankValue}
          reachability={reachability}
          reciprocity={reciprocity}
          communityId={communityId}
          communitySize={communitySize}
          clusterLabel={clusterLabel}
          diameter={diameter}
        />
      ) : (
        <span class="title-rule" aria-hidden="true"></span>
      )}

      <div class="post-meta">
        <span>PUB {formatDate(pubDatetime)}</span>
        {modDatetime && <span class="meta-sep">&middot;&middot;&middot;</span>}
        {modDatetime && <span>MOD {formatDate(modDatetime)}</span>}
        {wordCount > 0 && <span class="meta-sep">&middot;&middot;&middot;</span>}
        {wordCount > 0 && <span>{formatWordCount(wordCount)}</span>}
        {readingTime && <span>/</span>}
        {readingTime && <span>{formatReadingTime(readingTime)}</span>}
        {resolvedTypeLabel && (
          <>
            <span class="meta-sep">&middot;&middot;&middot;</span>
            <span class="post-type">{resolvedTypeLabel}</span>
          </>
        )}
      </div>

      <ul class="tags-container">
        {tags.map((tag: string) => <Tag tag={tag} />)}
      </ul>

      {inspiration && (
        <section class="inspiration">
          <span class="inspiration-label">Inspired by</span>
          <a href={inspiration.url} target="_blank" rel="noreferrer">
            {inspiration.title}
          </a>
          {inspiration.author && <span class="inspiration-author"> â€” {inspiration.author}</span>}
        </section>
      )}
    </div>

    <article id="article" class={articleClasses.join(" ")}>
      {
        String(type) === "fragment" && (
          <div class="fragment-notice">
            <span class="fragment-icon" aria-hidden="true">!</span>
            <span>
              <b>Fragment in Flux:</b> This fragment is currently unstable and
              undergoing updates.
            </span>
          </div>
        )
      }
      <Content />
    </article>

    {prototypeUrl && prototypeType && (
      <EmbedPrototype
        url={prototypeUrl}
        type={prototypeType}
        title={`Prototype: ${title}`}
      />
    )}

    <hr class="detail-rule" />

    <div class="prev-next">
      {
        prevPost && (
          <a href={`/${basePath}/${prevPost.id}/`} class="prev-link">
            <span class="pn-direction">&larr; Previous</span>
            <span class="pn-title">{prevPost.title}</span>
          </a>
        )
      }
      {
        nextPost && (
          <a href={`/${basePath}/${nextPost.id}/`} class="next-link">
            <span class="pn-direction">Next &rarr;</span>
            <span class="pn-title">{nextPost.title}</span>
          </a>
        )
      }
    </div>
    {backlinks.length > 0 && (
      <Backlinks backlinks={backlinks} />
    )}

    <div class="post-footer-meta">
      <AidaNotice aiUsage={aiUsage} />
      <button
        id="back-to-top"
        class="focus-outline back-to-top"
      >
        &uarr; Top
      </button>
    </div>
  </main>
  <Footer />
</Layout>

<style>
  main {
    @apply mx-auto w-full max-w-3xl px-4 pb-12;
  }
  .back-link {
    @apply mb-1 mt-8 font-mono text-sm;
    color: rgb(var(--color-base));
    text-decoration: none;
    transition: color var(--transition-base);
  }
  .back-link:hover {
    color: rgb(var(--color-accent));
  }
  .post-title {
    @apply mt-2 font-mono text-3xl font-normal;
    color: rgb(var(--color-text-base));
  }
  .title-rule {
    @apply my-3 block;
    width: 100%;
    border-bottom: 2px double rgb(var(--color-border));
  }
  .post-meta {
    @apply flex flex-wrap items-baseline gap-x-2 gap-y-1 font-mono text-xs;
    color: rgb(var(--color-base));
  }
  .meta-sep {
    color: rgb(var(--color-border-muted));
    letter-spacing: -1px;
  }
  .post-type {
    @apply uppercase;
    color: rgb(var(--color-accent-secondary));
  }
  .tags-container {
    @apply my-3 flex flex-wrap gap-1;
    list-style: none;
    padding: 0;
  }
  .inspiration {
    @apply my-4 border-l-2 py-2 pl-4 font-mono text-sm;
    border-color: rgb(var(--color-border));
    color: rgb(var(--color-base));
  }
  .inspiration a {
    color: rgb(var(--color-text-base));
    text-decoration: underline;
    text-decoration-style: dotted;
    text-underline-offset: 4px;
  }
  .inspiration a:hover {
    color: rgb(var(--color-accent));
  }
  .inspiration-label {
    @apply mr-2 text-xs uppercase;
  }
  .inspiration-author {
    color: rgb(var(--color-base));
  }
  .fragment-notice {
    @apply flex items-center gap-2 pb-4 font-mono text-sm;
    color: rgb(var(--color-base));
  }
  .fragment-icon {
    @apply flex h-5 w-5 flex-shrink-0 items-center justify-center border text-xs;
    border-color: rgb(var(--color-border));
    color: rgb(var(--color-accent));
  }
  .post-footer-meta {
    @apply flex items-center justify-between gap-4;
    margin-bottom: 1.25rem;
  }
  .back-to-top {
    @apply whitespace-nowrap font-mono text-xs;
    color: rgb(var(--color-base));
    background: none;
    border: none;
    cursor: pointer;
    transition: color var(--transition-base);
  }
  .back-to-top:hover {
    color: rgb(var(--color-accent));
  }
  .detail-rule {
    @apply my-5;
    border: none;
    border-top: 1px solid rgb(var(--color-border));
  }
  .prev-next {
    @apply grid grid-cols-1 gap-3 sm:grid-cols-2;
    margin-bottom: 0.5rem;
  }
  .prev-link,
  .next-link {
    @apply flex flex-col gap-0.5 font-mono text-sm;
    text-decoration: none;
  }
  .next-link {
    @apply text-right sm:col-start-2;
  }
  .pn-direction {
    @apply text-xs uppercase tracking-wide;
    color: rgb(var(--color-base));
  }
  .pn-title {
    color: rgb(var(--color-text-base));
    transition: color var(--transition-base);
  }
  .prev-link:hover .pn-title,
  .next-link:hover .pn-title {
    color: rgb(var(--color-accent));
  }

  /* Allow margin notes to overflow to the right without shifting main */
  @media (min-width: 72rem) {
    main:has(#article.has-margin-notes) {
      overflow: visible;
    }
  }
</style>

<script is:inline data-astro-rerun>

  /** Create a progress indicator
   *  at the top */
  function createProgressBar() {
    // Create the main container div
    const progressContainer = document.createElement("div");
    progressContainer.className =
      "progress-container fixed top-0 z-10 h-1 w-full bg-skin-fill";

    // Create the progress bar div
    const progressBar = document.createElement("div");
    progressBar.className = "progress-bar h-1 w-0 bg-skin-accent";
    progressBar.id = "myBar";

    // Append the progress bar to the progress container
    progressContainer.appendChild(progressBar);

    // Append the progress container to the document body or any other desired parent element
    document.body.appendChild(progressContainer);
  }
  createProgressBar();

  /** Update the progress bar
   *  when user scrolls */
  function updateScrollProgress() {
    document.addEventListener("scroll", () => {
      const winScroll =
        document.body.scrollTop || document.documentElement.scrollTop;
      const height =
        document.documentElement.scrollHeight -
        document.documentElement.clientHeight;
      const scrolled = (winScroll / height) * 100;
      if (document) {
        const myBar = document.getElementById("myBar");
        if (myBar) {
          myBar.style.width = scrolled + "%";
        }
      }
    });
  }
  updateScrollProgress();

  /** Attaches links to headings in the document,
   *  allowing sharing of sections easily */
  function addHeadingLinks() {
    const headings = Array.from(
      document.querySelectorAll("h2, h3, h4, h5, h6")
    );
    for (const heading of headings) {
      heading.classList.add("group");
      const link = document.createElement("a");
      link.className =
        "heading-link ml-2 opacity-0 group-hover:opacity-100 focus:opacity-100";
      link.href = "#" + heading.id;

      const span = document.createElement("span");
      span.ariaHidden = "true";
      span.innerText = "#";
      link.appendChild(span);
      heading.appendChild(link);
    }
  }
  addHeadingLinks();

  /** Attaches copy buttons to code blocks in the document,
   * allowing users to copy code easily. */
  function attachCopyButtons() {
    const copyButtonLabel = "Copy";
    const codeBlocks = Array.from(document.querySelectorAll("pre"));

    for (const codeBlock of codeBlocks) {
      const wrapper = document.createElement("div");
      wrapper.style.position = "relative";

      const copyButton = document.createElement("button");
      copyButton.className =
        "copy-code absolute right-3 -top-3 rounded bg-skin-card px-2 py-1 text-xs leading-4 text-skin-base font-medium";
      copyButton.innerHTML = copyButtonLabel;
      codeBlock.setAttribute("tabindex", "0");
      codeBlock.appendChild(copyButton);

      // wrap codebock with relative parent element
      codeBlock?.parentNode?.insertBefore(wrapper, codeBlock);
      wrapper.appendChild(codeBlock);

      copyButton.addEventListener("click", async () => {
        await copyCode(codeBlock, copyButton);
      });
    }

    async function copyCode(block, button) {
      const code = block.querySelector("code");
      const text = code?.innerText;

      await navigator.clipboard.writeText(text ?? "");

      // visual feedback that task is completed
      button.innerText = "Copied";

      setTimeout(() => {
        button.innerText = copyButtonLabel;
      }, 700);
    }
  }
  attachCopyButtons();

  /** Scrolls the document to the top when
   * the "Back to Top" button is clicked. */
  function backToTop() {
    document.querySelector("#back-to-top")?.addEventListener("click", () => {
      document.body.scrollTop = 0; // For Safari
      document.documentElement.scrollTop = 0; // For Chrome, Firefox, IE and Opera
    });
  }
  backToTop();

  /** Lightweight image lightbox for prose images */
  function initLightbox() {
    const article = document.getElementById("article");
    if (!article) return;

    let overlay = null;

    function open(src, alt) {
      overlay = document.createElement("div");
      overlay.className = "lightbox-overlay";
      overlay.innerHTML =
        '<button class="lightbox-close" aria-label="Close preview">&times;</button>' +
        '<img src="' + src + '" alt="' + (alt || "") + '" />';

      document.body.appendChild(overlay);
      document.body.style.overflow = "hidden";

      // Trigger enter animation on next frame
      requestAnimationFrame(function () { overlay.classList.add("is-visible"); });

      overlay.addEventListener("click", close);
      document.addEventListener("keydown", onKey);
    }

    function close() {
      if (!overlay) return;
      overlay.classList.remove("is-visible");
      overlay.addEventListener("transitionend", function () {
        overlay.remove();
        overlay = null;
      }, { once: true });
      document.body.style.overflow = "";
      document.removeEventListener("keydown", onKey);
    }

    function onKey(e) {
      if (e.key === "Escape") close();
    }

    var imgs = article.querySelectorAll("img");
    for (var i = 0; i < imgs.length; i++) {
      imgs[i].addEventListener("click", function (e) {
        e.preventDefault();
        open(this.src, this.alt);
      });
    }
  }
  initLightbox();

  /* Go to page start after page swap */
  document.addEventListener("astro:after-swap", () =>
    window.scrollTo({ left: 0, top: 0, behavior: "instant" })
  );
</script>
